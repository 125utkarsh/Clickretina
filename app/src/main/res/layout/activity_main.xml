<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@color/white2"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Container with white background -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERALL SCORE"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:layout_gravity="start" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/rounded_corner"
            android:padding="0dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- First Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_gravity="fill">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Score"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"

                        android:paddingTop="30dp"
                        android:paddingStart="30dp"
                        android:layout_gravity="start"
                        android:paddingBottom="0dp"/>

                    <!-- Second Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingStart="30dp"
                        android:textColor="@color/orange"
                        android:layout_gravity="start"/>
                    <!-- Add content for the first container here -->

                </LinearLayout>

                <!-- Second Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_gravity="fill"
                    android:gravity="center">

                    <!-- Infographic Circle -->
                    <com.example.clickretina.InfographicCircleView
                        android:id="@+id/infographic_circle"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>

                    <!-- Add content for the second container here -->

                </LinearLayout>

                <!-- Third Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_gravity="fill">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search Volume"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:paddingTop="30dp"
                        android:paddingStart="30dp"
                        android:layout_gravity="start"
                        android:paddingBottom="0dp"/>

                    <!-- Second Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingStart="30dp"
                        android:layout_gravity="start"
                        android:textColor="@color/green"
                        />
                    <!-- Add content for the first container here -->

                    <!-- Add content for the third container here -->

                </LinearLayout>

                <!-- Fourth Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_gravity="fill">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Competition"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:paddingTop="30dp"
                        android:paddingStart="30dp"
                        android:layout_gravity="start"
                        android:paddingBottom="0dp"/>

                    <!-- Second Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIGH"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingStart="30dp"
                        android:layout_gravity="start"
                        android:textColor="@color/red"
                        />
                    <!-- Add content for the first container here -->

                    <!-- Add content for the fourth container here -->

                </LinearLayout>



            </GridLayout>

        </FrameLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TITLE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_gravity="start" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corner"

            android:paddingTop="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"

                    android:padding="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/copy_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/sidecorner"
                        android:text="Copy"
                        android:textColor="#0277BD" />


                    <Button
                        android:id="@+id/share_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/sidecorner2"
                        android:text="Share"

                        android:textColor="#0277BD" />

                </LinearLayout>



            </LinearLayout>
            <!-- Add your content inside the container here -->
            <!-- For example, you can add TextViews, Buttons, etc. -->

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_gravity="start" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corner"

            android:paddingTop="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="9dp"
                    android:padding="16dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/copy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/sidecorner"

                        android:text="Copy"
                        android:textColor="#0277BD" />


                    <Button
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/sidecorner2"

                        android:text="Share"

                        android:textColor="#0277BD" />

                </LinearLayout>



            </LinearLayout>
            <!-- Add your content inside the container here -->
            <!-- For example, you can add TextViews, Buttons, etc. -->

        </FrameLayout>

    </LinearLayout>
</ScrollView>

